---
layout: layouts/base.njk
pagination:
  data: coins
  size: 1
  alias: coin
permalink: "/coins/{{ coin.id | slug }}/index.html"
---

<article class="coin-page">
  <header class="coin-header">
    <img src="{{ coin.image }}" alt="{{ coin.name }} logo" width="48" height="48">
    <h2>{{ coin.name }} ({{ coin.symbol | upper }})</h2>
  </header>

  <div class="stats">
    <p><strong>Current Price:</strong> ${{ coin.current_price | round(2) }}</p>
    <p><strong>Market Cap:</strong> ${{ coin.market_cap | toLocaleString }}</p>
    <p><strong>24h Change:</strong> {{ coin.price_change_percentage_24h | round(2) }}%</p>
    <p><strong>24h High / Low:</strong> ${{ coin.high_24h | round(2) }} / ${{ coin.low_24h | round(2) }}</p>
    <p><small>Last updated: {{ coin.last_updated }}</small></p>
  </div>

  <div class="cta">
    <a class="btn" href="{{ site.affiliate.coinbase }}" rel="nofollow noopener" target="_blank">Buy on Coinbase</a>
    <a class="btn alt" href="{{ site.affiliate.binance }}" rel="nofollow noopener" target="_blank">Trade on Binance</a>
  </div>

  <!-- In-article Ad placeholder -->
  {% if site.adsense.slotId %}
  <ins class="adsbygoogle" style="display:block" data-ad-client="{{ site.adsense.publisherId }}" data-ad-slot="{{ site.adsense.slotId }}" data-ad-format="auto" data-full-width-responsive="true"></ins>
  <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
  {% endif %}
</article>